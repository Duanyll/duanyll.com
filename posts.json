---
layout: null
permalink: /posts.json
---

{
	"posts":[
		{% for post in site.posts %}
		{
			"title": "{{ post.title }}",
			"date": "{{ post.date }}",
			"excerpt": "{{ post.excerpt | strip_html | truncate: 100}}",
			"url": "{{ post.url }}",
			"tags":[
				{% for tag in post.tags %}
					"{{ tag }}",
				{% endfor %}
			]
		},
		{% endfor %}
	]
}